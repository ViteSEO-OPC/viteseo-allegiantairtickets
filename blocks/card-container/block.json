{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 2,
  "name": "childtheme/card-container",
  "title": "Card Container (1–3 Cards)",
  "category": "design",
  "icon": "screenoptions",
  "description": "Container that renders up to three cards from a cards[] array, plus optional left/right decor.",
  "keywords": ["card", "grid", "container", "layout", "decor"],
  "supports": {
    "align": ["wide", "full"],
    "anchor": true,
    "spacing": {
      "margin": true,
      "padding": true
    }
  },
  "style": "file:./style.css",
  "render": "file:./render.php",
  "usesContext": ["postId", "postType"],
  "attributes": {
    "columns": {
      "type": "number",
      "default": 2
    },
    "gap": {
      "type": "number",
      "default": 32
    },
    "maxWidth": {
      "type": "number",
      "default": 1160
    },

    "cards": {
      "type": "array",
      "default": [],
      "items": {
        "type": "object"
      }
    },

    "decor": {
      "type": "array",
      "default": []
    }
  },
  "example": {
    "attributes": {
      "align": "full",
      "columns": 2,
      "gap": 32,
      "cards": [
        {
          "imageUrl": "https://picsum.photos/960/540?random=60",
          "imageAlt": "Sample 1",
          "title": "Exploring Tokyo vs Kyoto: Which is Better?",
          "text": "Tokyo and Kyoto showcase Japan’s perfect balance of innovation and tradition.",
          "ctaText": "Learn More",
          "ctaUrl": "/tokyo-kyoto/",
          "ctaAccent": "#FD593C",
          "ctaTextColor": "#FD593C",
          "ctaBorderColor": "#FD593C"
        },
        {
          "imageUrl": "https://picsum.photos/960/540?random=61",
          "imageAlt": "Sample 2",
          "title": "Outdoor Activities in Japan",
          "text": "From hiking to coastal adventures, Japan invites travelers into its wild side.",
          "ctaText": "See Ideas",
          "ctaUrl": "/outdoor-japan/",
          "ctaAccent": "#FD593C",
          "ctaTextColor": "#FD593C",
          "ctaBorderColor": "#FD593C"
        }
      ],
      "decor": [
        {
          "url": "https://picsum.photos/140/540?random=90",
          "alt": "Left motif",
          "side": "left",
          "vPos": "center"
        },
        {
          "url": "https://picsum.photos/140/540?random=91",
          "alt": "Right motif",
          "side": "right",
          "vPos": "center"
        }
      ]
    }
  },
  "textdomain": "childtheme"
}
